<% provide :head_tags do %>
    <meta name='turbolinks-visit-control' content='reload'> 
<% end %>
<nav class="navbar navbar-expand-lg navbar-light nav-color text-white sticky-top">
  <div class='container-fluid'>
    <%= link_to 'Home', root_path, class: 'navbar-brand text-white home'%>
    <button class="custom-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <%= link_to 'Add Property', new_property_path, class:'btn' %>
      <%= form_with url: search_path, local:true, method: :get, html: {class: "form-inline my-2 my-lg-0 mx-auto"} do |form| %>
        <%= form.text_field :q, placeholder: "Search property", data: {behavior: "autocomplete"}, class: "form-control mr-sm-2" %>
        <%= form.button "Search", class: "btn btn-outline-light my-2 my-sm-0" %>
      <% end %>
      <ul class="nav navbar-nav ml-auto">
        <li>
          <%= link_to "Sign up", new_user_registration_path, class: 'btn' %>
        </li>
        <li>
          <%= link_to "Login", new_user_session_path, class: 'btn' %>
        </li>
      </ul>
    </div>
  </div>
</nav>      




