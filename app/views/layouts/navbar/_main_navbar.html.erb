<% provide :head_tags do %>
    <meta name='turbolinks-visit-control' content='reload'> 
<% end %>

    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div id="dismiss">
                <i class="fas fa-arrow-left"></i>
            </div>

            <div class="sidebar-header">
              <%= image_tag 'rental.svg', class: 'navbar-logo' %>
            </div>

            <ul class="list-unstyled components">
              <!-- make this a home button -->
                <p>RentalHub</p>
                <li class="active">
                  <li>
                    <%= link_to "Sign up", new_user_registration_path %>
                  </li>
                  <li>
                    <%= link_to "Login", new_user_session_path %>
                  </li>
                </li>
                <li>
                  <a href="#">Contact email</a>
                </li>
                <li>
                  <%= link_to "About", static_pages_about_path %>
                </li>
            </ul>

            <ul class="list-unstyled CTAs">
                <li>
                  <%= link_to 'Place Review', new_property_path %>
                </li>
                <li>
                  <%= link_to 'Review List', properties_path %>
                  <!--<a href="#" class="article">Review List</a>-->
                </li>
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span>Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav mx-auto">
                          <li>
                            <!-- do we need the search bar? if so we need to give auth to all users or redirect to log-in page -->
                            <%= form_with url: search_path, local:true, method: :get, html: {class: "form-inline my-2 my-lg-0 mx-auto"} do |form| %>
                              <%= form.text_field :q, placeholder: "Rental search", data: {behavior: "autocomplete"}, class: "form-control mr-sm-2" %>
                              <!-- do we need the actual button? -->
                              <%#= form.button "Search", class: "btn btn-outline-light my-2 my-sm-0" %>
                            <% end %>
                          </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div class="overlay"></div>

</div>


